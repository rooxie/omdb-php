{
    "name": "rooxie/omdb",
    "type": "library",
    "description": "A PHP wrapper for OMDb API",
    "keywords": ["imdb", "omdb", "api", "movies", "films", "psr"],
    "homepage": "http://github.com/rooxie/omdb-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Roman Derlemenko",
            "email": "romanderlemenko@gmail.com",
            "homepage": "https://github.com/rooxie"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10 || ^11 || ^12"
    },
    "autoload": {
        "psr-4": {
            "Rooxie\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rooxie\\Tests\\": "tests/"
        }
    }
}
